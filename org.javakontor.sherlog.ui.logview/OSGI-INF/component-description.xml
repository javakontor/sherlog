<?xml version="1.0"?>
<component name="logView" immediate="true">
	<implementation
		class="org.javakontor.sherlog.ui.logview.osgi.LogViewComponent" />
	
	<reference name="componentFactory"
		interface="org.osgi.service.component.ComponentFactory"
		bind="bindComponentFactory" unbind="unbindComponentFactory"
		cardinality="1..1" policy="dynamic" />

	<reference name="logEventStore"
		interface="org.javakontor.sherlog.core.store.LogEventStore"
		bind="bindLogEventStore" unbind="unbindLogEventStore"
		cardinality="0..n" policy="dynamic" />

</component>