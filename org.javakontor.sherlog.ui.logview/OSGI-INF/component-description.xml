<?xml version="1.0"?>
<component name="logView" immediate="true">
  <implementation class="org.javakontor.sherlog.ui.logview.osgi.LogViewComponent"/>
  	
  <reference name="logEventStore"
    interface="org.javakontor.sherlog.core.store.LogEventStore"
    bind="addLogEventStore"
    unbind="removeLogEventStore"
    cardinality="0..1"
    policy="dynamic"
  />
  
  <reference name="logEventDecorator"
    interface="org.javakontor.sherlog.ui.logview.decorator.LogEventDecorator"
    bind="addLogEventDecorator"
    unbind="removeLogEventDecorator"
    cardinality="0..n"
    policy="dynamic"
  />
  
</component>