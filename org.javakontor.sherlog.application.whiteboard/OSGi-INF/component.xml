<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" name="org.javakontor.sherlog.application.whiteboard">
   <implementation class="org.javakontor.sherlog.application.whiteboard.WhiteboardComponent"/>

  <reference name="ActionSetManager"
    interface="org.javakontor.sherlog.application.action.contrib.ActionSetManager"
    policy="static"
    cardinality="1..1"
    bind="addActionSetManager"
    unbind="removeActionSetManager" />

  <reference name="actionContributions"
    interface="org.javakontor.sherlog.application.action.ActionContribution"
    bind="addActionContribution"
    unbind="removeActionContribution"
    cardinality="0..n"
    policy="dynamic"
  />

  <reference name="actionGroups"
    interface="org.javakontor.sherlog.application.action.ActionGroupContribution"
    bind="addActionGroupContribution"
    unbind="removeActionGroupContribution"
    cardinality="0..n"
    policy="dynamic"
  />

</scr:component>
