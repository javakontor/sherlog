<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" name="org.javakontor.sherlog.application.whiteboard">
   <implementation class="org.javakontor.sherlog.application.whiteboard.WhiteboardComponent"/>

  <reference name="ActionSetManager"
    interface="org.javakontor.sherlog.application.action.ActionSetManager"
    policy="static"
    cardinality="1..1"
    bind="addActionSetManager"
    unbind="removeActionSetManager" />

  <reference name="actions"
    interface="org.javakontor.sherlog.application.action.Action"
    bind="addAction"
    unbind="removeAction"
    cardinality="0..n"
    policy="dynamic"
  />

  <reference name="actionGroups"
    interface="org.javakontor.sherlog.application.action.ActionGroup"
    bind="addActionGroup"
    unbind="removeActionGroup"
    cardinality="0..n"
    policy="dynamic"
  />

</scr:component>
