<?xml version="1.0"?>
<!-- - - - - - - - - - - - - - - - - - - - - - - -
	The logStoreComponentFactory can be used to
	create new instances of type LogStore.
	- - - - - - - - - - - - - - - - - - - - - - - -->
<!-- <component name="logStoreComponentFactory" factory="logStoreComponentFactory"> -->
<component name="logStoreComponent" immediate="true">
	<implementation
		class="org.javakontor.sherlog.core.impl.internal.store.LogStoreComponent" />
	<service>
		<provide interface="org.javakontor.sherlog.core.store.LogEventStore" />
		<provide interface="org.javakontor.sherlog.core.store.ModifiableLogEventStore"/>
	</service>
	
	<reference name="logEventFilterFactory"
		interface="org.javakontor.sherlog.core.filter.LogEventFilterFactory"
		bind="addLogEventFilterFactory" unbind="removeLogEventFilterFactory"
		cardinality="0..n" policy="dynamic" />
</component>
